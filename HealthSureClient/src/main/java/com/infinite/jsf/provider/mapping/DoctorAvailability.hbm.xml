<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.infinite.jsf.provider.model.DoctorAvailability" table="Doctor_Availability">

    <id name="availabilityId" column="availability_id" type="string">
      <generator class="assigned"/>
    </id>

    <!-- doctor mapped only once -->
    <many-to-one name="doctor" class="com.infinite.jsf.provider.model.Doctors" column="doctor_id" not-null="true" fetch="join"/>

    <property name="availableDate" column="available_date" type="date" not-null="true"/>
    <property name="startTime" column="start_time" type="time" not-null="true"/>
    <property name="endTime" column="end_time" type="time" not-null="true"/>

    <property name="slotType">
      <column name="slot_type" sql-type="varchar(20)" not-null="true"/>
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">com.infinite.jsf.provider.model.SlotType</param>
        <param name="type">12</param>
        <param name="useNamed">true</param>
      </type>
    </property>

   <property name="notes"/>
    <property name="totalSlots" column="total_slots"/>
    <property name="createdAt" column="created_at" type="timestamp" insert="false" update="false"/>
    <property name="updatedAt" column="updated_at" type="timestamp" insert="false" update="false"/>
    <set name="appointments" table="Appointment" inverse="true" lazy="true" cascade="all">
  <key column="availability_id"/>
  <one-to-many class="com.infinite.jsf.provider.model.Appointment"/>
</set>


  </class>
</hibernate-mapping>
